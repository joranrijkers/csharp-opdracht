@using System.Data;
@using project_joran_en_alina.App_Code;

@{
    SongMethods mySongMethods = Session["playlistClass"] as SongMethods;
    String file = Session["file"] as string;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <title></title>
</head>
<body style="background-image: url('https://coolbackgrounds.io/images/backgrounds/index/compute-ea4c57a4.png')">
    <form class="mt-1 ml-1 mr-1 mb-1">
        <table>
        <thead class="table table-striped table-dark table-hover rounded">
            <tr><td colspan="2" class="text-center">Weet u zeker dat u deze song wilt verwijderen?</td></tr>
            <tr><td class="col-sm-2 col-form-label">Ja</td><td><input name="keuze" value="ja" type="radio" /></td></tr>
            <tr><td class="col-sm-2 col-form-label">nee</td><td><input name="keuze" value="nee" type="radio" /></td></tr>
        </thead>   

            <tfoot class="mr-1">
            <tr><td colspan="2"><button type="submit" class="mt-1 col-sm-12 btn btn-primary btn-lg btn-dark" formmethod="post">verder</button></td></tr>

            @if (IsPost)
            {
                if (Request.Form["keuze"] == "ja")
                {
                    string id = Request.QueryString["id"];
                    mySongMethods.DeleteSong(id, file);
                }

                Response.Redirect(@"~/index.cshtml");
            }
        </tfoot>
        </table>
    </form>
</body>
</html>
