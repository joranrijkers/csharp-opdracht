 
@using System.Data;
@using project_joran_en_alina.App_Code;

@{
    SongMethods mySongMethods = Session["playlistClass"] as SongMethods;
    String file = Session["file"] as string;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <title></title>
</head>
<body class="bg-secondary">
    <a type="button" class="mt-1 ml-1 btn btn-primary btn-lg btn-dark" href="~/index.cshtml">Back</a>

    <form class="mt-1 ml-1 mr-1 mb-1" method="post">
        <table>
        <thead class="table table-striped table-dark table-bordered table-hover">
            <tr><td class="col-form-label">ID:</td><td class="col-sm-10"><input class="form-control" type="text" name="id" /></td></tr>
            <tr><td class="col-form-label">Artiest:</td><td class="col-sm-10"><input class="form-control" type="text" name="artist" /></td></tr>
            <tr><td class="col-form-label">title:</td><td class="col-sm-10"><input class="form-control" type="text" name="title" /></td></tr>
            <tr><td class="col-form-label">Jaar:</td><td class="col-sm-10"><input class="form-control" type="text" name="year" /></td></tr>
            <tr><td class="col-form-label">Genre:</td><td class="col-sm-10"><input class="form-control" type="text" name="genre" /></td></tr>
            <tr><td class="col-form-label">Tijd:</td><td class="col-sm-10"><input class="form-control" type="text" name="time" /></td></tr>
            <tr><td class="col-form-label">Youtube-URL:</td><td class="col-sm-10"><input class="form-control" type="text" name="youtube" /></td></tr>
        </thead>

        <foot>
            <tr><td colspan="2"><button type="submit" class="mt-1 col-sm-12 btn btn-primary btn-lg btn-dark" formmethod="post">Save</button></td></tr>

        @if (IsPost)
        {
            DataRow dr = mySongMethods.GetEmptyDataRow();

            dr[0] = Request.Form["id"];
            dr[1] = Request.Form["artist"];
            dr[2] = Request.Form["title"];
            dr[3] = Request.Form["year"];
            dr[4] = Request.Form["genre"];
            dr[5] = Request.Form["time"];
            dr[6] = Request.Form["file"];

            mySongMethods.CreateSong(dr, file);
            Response.Redirect(@"~/index.cshtml");
        }
        </foot>
        </table>
    </form>












</body>
</html>
